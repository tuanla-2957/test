include ../mixins/mixins
include ../data/category
div.content
    div.content-wrapper
        div.container 
            div.row.d-flex.justify-content-between
                //- search-infor
                div.now-infor.col-xl-5.d-none.d-xl-block
                    div.search
                        h1.search__title Đặt Đồ ăn, giao hàng từ 20'...
                        div.search__local có 66137 địa điểm ở TP. HCM từ 00:00 - 23:59
                        div.form-search
                            div.input-group
                                input.input-search(type="text" placeholder="Tìm địa điểm, món ăn, địa chỉ...")
                                button.btn.btn-primary.button-search
                                    i.fas.fa-search 
                        div.search__filter
                            each item, index in category 
                                button.button-white=item.title
                        div.mb-2.mt-3 Sử dụng App ShopeeFood để có nhiều giảm giá 
                //- list card
                div.now-list.col-xl-7.col-12
