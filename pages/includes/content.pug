                        div.col.text-gray.pe-2 Chọn địa chỉ giao hàng
                        div.col-auto
                            i.fas.fa-angle-right.text-gray.ms-2.fontxs
                    div.main-card.row
                        +titleItem("Ưu đãi", "Xem tất cả")
                        include ./card/sale-card
                        div.text-center.mt-2 
                            a.text-blue(href="#") 
                                span.pe-1 Xem thêm
                                <i class="fas fa-redo font12 "></i>
